{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "electron",
    "rootDir": "electron"
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules", "src", "dist"]
}
